<section class="filter-section">
    <h2>Фільтри для вибору номерів</h2>
    <form class="filter-form">
        <!-- Існуючі фільтри -->
        <div class="filter-item">
            <label for="price">Ціна:</label>
            <select id="price" name="price">
                <option value="all">Всі</option>
                <option value="ascending">Зі збільшенням</option>
                <option value="descending">Зі зменшенням</option>
            </select>
        </div>
        <div class="filter-item">
            <label for="category">Категорія:</label>
            <select id="category" name="category">
                <option value="all">Всі</option>
                <option value="luxury">Люкс</option>
                <option value="presidential">Президентський</option>
                <option value="standard">Стандарт</option>
            </select>
        </div>
        <div class="filter-item">
            <label for="beds">Кількість ліжок:</label>
            <select id="beds" name="beds">
                <option value="all">Всі</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
            </select>
        </div>
        <div class="filter-item">
            <label for="balcony">Наявність балкону:</label>
            <select id="balcony" name="balcony">
                <option value="all">Всі</option>
                <option value="yes">Так</option>
                <option value="no">Ні</option>
            </select>
        </div>
        <div class="filter-item">
            <label for="breakfast">Сніданок:</label>
            <select id="breakfast" name="breakfast">
                <option value="all">Всі</option>
                <option value="yes">Є</option>
                <option value="no">Немає</option>
            </select>
        </div>

        <!-- Новий фільтр: Кількість кімнат -->
        <div class="filter-item">
            <label for="rooms">Кількість кімнат:</label>
            <select id="rooms" name="rooms">
                <option value="all">Всі</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
            </select>
        </div>

        <!-- Новий фільтр: Поверх -->
        <div class="filter-item">
            <label for="floor">Поверх:</label>
            <select id="floor" name="floor">
                <option value="all">Всі</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>

        <!-- Кнопка пошуку -->
        <div class="filter-actions">
            <button type="button" onclick="filterRooms()">Знайти номер</button>
        </div>
    </form>
</section>

